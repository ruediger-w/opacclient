<?xml version="1.0" encoding="utf-8"?>
<!--
    Previous style:
	http://jgilfelt.github.io/android-actionbarstylegenerator/#name=opacapp&compat=appcompat&theme=light_dark&actionbarstyle=solid&texture=0&hairline=0&neutralPressed=1&backColor=c00%2C100&secondaryColor=555555%2C100&tabColor=c00%2C100&tertiaryColor=303030%2C100&accentColor=f44%2C100&cabBackColor=002E3E%2C100&cabHighlightColor=f44%2C100
 -->

<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Changes not specific to API level go here -->
    <style name="Theme.Opacapp.Base" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryDark">@color/primary_red_dark</item>
        <item name="colorAccent">@color/accent_red</item>
        <item name="preferenceTheme">@style/MaterialPreferenceThemeOverlay</item>
    </style>

    <style name="Theme.Opacapp.NoActionBar.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryDark">@color/primary_red_dark</item>
        <item name="colorAccent">@color/accent_red</item>
        <item name="preferenceTheme">@style/MaterialPreferenceThemeOverlay</item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.Opacapp.Base.Floating" parent="Theme.MaterialComponents.Light.DialogWhenLarge">
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryDark">@color/primary_red_dark</item>
        <item name="colorAccent">@color/accent_red</item>
        <item name="preferenceTheme">@style/MaterialPreferenceThemeOverlay</item>

        <!-- no action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Opacapp.Base.Transparent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryDark">@color/primary_red_dark</item>
        <item name="colorAccent">@color/accent_red</item>
        <item name="preferenceTheme">@style/MaterialPreferenceThemeOverlay</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.Opacapp.Base.AccountDetail" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryDark">@color/primary_red_dark</item>
        <item name="colorAccent">@color/accent_red</item>
        <item name="preferenceTheme">@style/MaterialPreferenceThemeOverlay</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="TextAppearance.Opacapp.Base.Subhead" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_red</item>
    </style>

    <style name="TextAppearance.Opacapp.Subhead.Drawer" parent="TextAppearance.Opacapp.Subhead">
        <item name="android:textColor">@color/nav_seperator_fg</item>
    </style>

    <style name="TextAppearance.Opacapp.ExpandedMediaTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="ThemeOverlay.Opacapp.ActionBar"
           parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- Changes specific to this API level go here -->
    <style name="Theme.Opacapp" parent="Theme.Opacapp.Base"/>

    <style name="Theme.Opacapp.NoActionBar" parent="Theme.Opacapp.NoActionBar.Base"/>

    <style name="Theme.Opacapp.NoActionBar.WithDrawer" parent="Theme.Opacapp.NoActionBar.Base"/>

    <style name="Theme.Opacapp.Floating" parent="Theme.Opacapp.Base.Floating"/>

    <style name="Theme.Opacapp.Transparent" parent="Theme.Opacapp.Base.Transparent" />

    <style name="Theme.Opacapp.AccountDetail" parent="Theme.Opacapp.Base.AccountDetail"/>

    <style name="TextAppearance.Opacapp.Subhead" parent="TextAppearance.Opacapp.Base.Subhead">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detailLabel" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="detailValue" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="detailIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">32dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>